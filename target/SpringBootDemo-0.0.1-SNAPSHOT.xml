<configuration>
    <!--安装成Windows服务后的服务名-->
    <id>SpringBootDemo-0.0.1-SNAPSHOT</id>
    <!--显示的服务名称-->
    <name>SpringBootDemo-0.0.1-SNAPSHOT</name>
    <!--对服务的描述-->
    <description>SpringBoot测试</description>
    <!--这里写java的路径，如何配置了环境变量直接写"java"就行-->
    <executable>java</executable>
    <!--Xmx256m 代表堆内存最大值为256MB -jar后面的是项目名-->
    <arguments>-Xrs -Xmx256m -jar "%BASE%\SpringBootDemo-0.0.1-SNAPSHOT.jar" --server.port=10111</arguments>
    <!--日志模式-->
    <!-- <logmode>%BASE%\log</logmode> -->
    <logmode>rotate</logmode>
</configuration>
